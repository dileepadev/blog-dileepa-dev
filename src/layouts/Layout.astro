---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Dileepa Bandara - Software Engineer",
  description = "Personal blog about software engineering, cloud computing, and AI.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      document.documentElement.className = theme;
      window.localStorage.setItem("theme", theme);
    </script>
  </head>
  <body
    class="bg-bg-primary text-text-primary antialiased min-h-screen flex flex-col pt-24"
  >
    <header class="fixed inset-x-0 top-5 z-50 transition-all duration-300">
      <div
        class="mx-auto w-[95%] max-w-5xl rounded-2xl bg-bg-elevated/80 backdrop-blur-xl border border-white/10 shadow-sm shadow-brand-primary/50"
      >
        <nav
          class="px-4 md:px-6 h-14 md:h-16 flex items-center justify-between"
        >
          <a
            href="/"
            class="text-lg font-bold text-text-primary hover:text-accent-blue transition-colors tracking-tight"
          >
            blog<span class="text-accent-blue">.</span>dileepa<span
              class="text-accent-blue">.</span
            >dev
          </a>
          <div
            class="flex items-center gap-6 text-sm font-medium text-text-muted"
          >
            <a href="/" class="hover:text-text-primary transition-colors"
              >Home</a
            >
            <a href="/blog" class="hover:text-text-primary transition-colors"
              >Blog</a
            >
            <a href="/about" class="hover:text-text-primary transition-colors"
              >About</a
            >

            <ThemeToggle />
          </div>
        </nav>
      </div>
    </header>

    <main class="grow w-full max-w-4xl mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-border-light bg-bg-secondary">
      <div
        class="max-w-4xl mx-auto px-4 py-8 text-center text-text-primary text-sm"
      >
        <p>
          &copy; {new Date().getFullYear()} Dileepa Bandara. All rights reserved.
        </p>
        <p class="mt-2">
          <a
            href="https://github.com/dileepadev/blog-dileepa-dev"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-text-muted hover:text-text-primary transition-colors"
            aria-label="View source on GitHub"
            title="View source on GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M10.303 16.652c-2.837-.344-4.835-2.385-4.835-5.028c0-1.074.387-2.235 1.031-3.008c-.279-.709-.236-2.214.086-2.837c.86-.107 2.02.344 2.708.967c.816-.258 1.676-.386 2.728-.386s1.913.128 2.686.365c.666-.602 1.848-1.053 2.708-.946c.3.581.344 2.085.064 2.815c.688.817 1.053 1.913 1.053 3.03c0 2.643-1.998 4.641-4.877 5.006c.73.473 1.224 1.504 1.224 2.686v2.235c0 .644.537 1.01 1.182.752c3.889-1.483 6.94-5.372 6.94-10.185c0-6.081-4.942-11.044-11.022-11.044c-6.081 0-10.98 4.963-10.98 11.044a10.84 10.84 0 0 0 7.112 10.206c.58.215 1.139-.172 1.139-.752v-1.719a2.8 2.8 0 0 1-1.032.215c-1.418 0-2.256-.773-2.857-2.213c-.237-.58-.495-.924-.989-.988c-.258-.022-.344-.129-.344-.258c0-.258.43-.451.86-.451c.623 0 1.16.386 1.719 1.181c.43.623.881.903 1.418.903s.881-.194 1.375-.688c.365-.365.645-.687.903-.902"
              ></path></svg
            >
            <span>View source on GitHub</span>
          </a>
        </p>
      </div>
    </footer>
  </body>
</html>
