---
import Layout from "../../layouts/Layout.astro";
import Pre from "../../components/mdx/Pre.astro";
import Share from "../../components/Share.astro";

export async function getStaticPaths() {
  const modules = import.meta.glob("../../content/posts/**/*.mdx", {
    eager: true,
  });

  return Object.entries(modules).map(([path, mod]) => {
    const m = mod as any;
    const slug =
      path
        .split("/")
        .pop()
        ?.replace(/\.mdx$/, "") ?? "";
    return {
      params: { slug },
      props: {
        post: {
          slug,
          Component: m.default,
          headings: m.getHeadings(),
          ...(m.frontmatter || {}),
        },
      },
    };
  });
}

const { post } = Astro.props;

function formatDate(date: string) {
  return new Date(date).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

function formatShortDate(date: string) {
  return new Date(date).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}

// Logic for Latest and Random/Recommended Posts
const allModules = import.meta.glob("../../content/posts/**/*.mdx", {
  eager: true,
});
const allPosts = Object.entries(allModules).map(([path, mod]) => {
  const m = mod as any;
  const slug =
    path
      .split("/")
      .pop()
      ?.replace(/\.mdx$/, "") ?? "";
  return {
    slug,
    ...(m.frontmatter || {}),
  };
});

const otherPosts = allPosts
  .filter((p) => p.slug !== post.slug)
  .sort(
    (a, b) =>
      new Date(b.publishedDate as string).valueOf() -
      new Date(a.publishedDate as string).valueOf(),
  );

const latestPost = otherPosts[0];
let recommendedPost = null;

if (otherPosts.length > 1) {
  const remaining = otherPosts.slice(1);

  // Try to find a related post based on tags
  const currentTags = new Set(post.tags || []);
  const related = remaining.filter(
    (p) => p.tags && p.tags.some((t: string) => currentTags.has(t)),
  );

  if (related.length > 0) {
    recommendedPost = related[Math.floor(Math.random() * related.length)];
  } else {
    // Fallback to random
    recommendedPost = remaining[Math.floor(Math.random() * remaining.length)];
  }
}
---

<Layout title={post.title} description={post.description}>
  <div class="max-w-7xl mx-auto gap-6 w-full justify-between">
    <article class="prose prose-lg dark:prose-invert max-w-none w-full">
      <header class="mb-8 not-prose">
        {
          post.banner && (
            <img
              src={post.banner}
              alt={post.bannerAlt || `${post.title} banner`}
              class="w-full rounded-xl mb-6 object-cover max-h-96"
            />
          )
        }

        <h1 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
          {post.title}
        </h1>
        <p class="text-lg text-text-muted font-medium mb-2">
          {post.description}
        </p>
        {
          post.publishedDate && (
            <p class="text-lg text-text-muted font-medium">
              {formatShortDate(post.publishedDate)}
              {post.updatedDate && post.updatedDate !== post.publishedDate && (
                <span class="ml-3">
                  · Updated {formatShortDate(post.updatedDate)}
                </span>
              )}
            </p>
          )
        }
        {
          post.tags && (
            <div class="mt-4 flex gap-2 flex-wrap">
              {post.tags.map((tag: string) => (
                <span class="capitalize rounded-md bg-bg-secondary border border-border-light text-text-secondary px-2.5 py-0.5 text-sm font-medium">
                  {tag}
                </span>
              ))}
            </div>
          )
        }

        <Share />
      </header>

      <section class="text-text-primary">
        <post.Component components={{ pre: Pre }} />
      </section>
    </article>

    <aside
      id="toc-panel"
      class="hidden lg:block static lg:fixed lg:bottom-40 lg:right-8 z-40 lg:w-72 w-full max-h-[70vh] lg:max-h-[70vh] overflow-y-auto bg-bg-secondary dark:bg-bg-secondary border border-border-light dark:border-border-medium rounded-xl shadow-2xl p-4 lg:p-5 transition-all duration-300"
      role="region"
      aria-label="Table of contents"
    >
      <div class="flex justify-between items-center mb-4">
        <h2
          class="text-sm font-bold text-text-primary uppercase tracking-wider"
        >
          On this page
        </h2>
      </div>
      <nav>
        <ul class="space-y-3 text-sm border-l border-border-light">
          {
            post.headings.map((heading: any) => (
              <li
                class:list={[
                  "pl-4 border-l-2 border-transparent hover:border-l-accent-blue hover:text-accent-blue transition-all text-text-muted duration-300 ease-in-out",
                ]}
                style={{
                  marginLeft: `${(heading.depth - 1) * 0.5}rem`,
                }}
              >
                <a href={`#${heading.slug}`} class="block">
                  {heading.text}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </aside>

    <!-- Mobile FAB to toggle ToC -->
    <button
      id="toc-toggle-btn"
      aria-controls="toc-panel"
      aria-expanded="false"
      class="lg:hidden fixed bottom-6 right-4 z-50 bg-accent-blue text-on-accent dark:bg-accent-blue-dark rounded-full p-3 shadow-lg shadow-accent-blue/25 hover:shadow-accent-blue/30 hover:bg-accent-blue/90 dark:hover:bg-accent-blue focus:outline-none focus:ring-2 focus:ring-accent-blue/30"
      title="Table of contents"
    >
      <svg
        id="toc-toggle-icon"
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <span class="sr-only">Toggle table of contents</span>
    </button>
  </div>

  {
    (latestPost || recommendedPost) && (
      <div class="max-w-7xl mx-auto mt-16 mb-12 px-4 md:px-0">
        <hr class="border-border-light mb-12" />
        <h2 class="text-2xl font-bold text-text-primary mb-6">Read Next</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {latestPost && (
            <a
              href={`/blog/${latestPost.slug}`}
              class="post-item relative block p-6 bg-bg-elevated border border-border-light rounded-xl hover:shadow-lg hover:border-accent-blue/30 hover:scale-[1.01] transition-all duration-300 group"
            >
              <span class="absolute top-4 right-4 z-10 bg-accent-blue/10 text-accent-blue text-xs font-bold uppercase tracking-wider px-2 py-1 rounded">
                Latest
              </span>
              {latestPost.banner && (
                <img
                  src={latestPost.banner}
                  alt={latestPost.bannerAlt || latestPost.title}
                  class="w-full h-48 object-cover rounded-md mb-4 shadow-sm"
                />
              )}
              <div class="flex flex-col h-full">
                <h3 class="text-xl font-semibold text-text-primary group-hover:text-accent-blue transition-colors mb-2 pr-12">
                  {latestPost.title}
                </h3>
                {latestPost.publishedDate && (
                  <p class="text-sm text-text-muted mb-2 font-medium">
                    {formatShortDate(latestPost.publishedDate)}
                    {latestPost.updatedDate &&
                      latestPost.updatedDate !== latestPost.publishedDate && (
                        <span class="ml-2">
                          · Updated {formatShortDate(latestPost.updatedDate)}
                        </span>
                      )}
                  </p>
                )}
                {latestPost.description && (
                  <p class="text-text-secondary line-clamp-2">
                    {latestPost.description}
                  </p>
                )}
              </div>
            </a>
          )}
          {recommendedPost && (
            <a
              href={`/blog/${recommendedPost.slug}`}
              class="post-item relative block p-6 bg-bg-elevated border border-border-light rounded-xl hover:shadow-lg hover:border-accent-blue/30 hover:scale-[1.01] transition-all duration-300 group"
            >
              <span class="absolute top-4 right-4 z-10 bg-purple-500/10 text-purple-600 dark:text-purple-400 text-xs font-bold uppercase tracking-wider px-2 py-1 rounded">
                Recommended
              </span>
              {recommendedPost.banner && (
                <img
                  src={recommendedPost.banner}
                  alt={recommendedPost.bannerAlt || recommendedPost.title}
                  class="w-full h-48 object-cover rounded-md mb-4 shadow-sm"
                />
              )}
              <div class="flex flex-col h-full">
                <h3 class="text-xl font-semibold text-text-primary group-hover:text-accent-blue transition-colors mb-2 pr-12">
                  {recommendedPost.title}
                </h3>
                {recommendedPost.publishedDate && (
                  <p class="text-sm text-text-muted mb-2 font-medium">
                    {formatShortDate(recommendedPost.publishedDate)}
                    {recommendedPost.updatedDate &&
                      recommendedPost.updatedDate !==
                        recommendedPost.publishedDate && (
                        <span class="ml-2">
                          · Updated{" "}
                          {formatShortDate(recommendedPost.updatedDate)}
                        </span>
                      )}
                  </p>
                )}
                {recommendedPost.description && (
                  <p class="text-text-secondary line-clamp-2">
                    {recommendedPost.description}
                  </p>
                )}
              </div>
            </a>
          )}
        </div>
      </div>
    )
  }
</Layout>

<script>
  function updateToc() {
    const headings = Array.from(
      document.querySelectorAll("article :is(h1, h2, h3, h4, h5, h6)"),
    );
    const tocLinks = document.querySelectorAll("nav ul li");

    let currentHeading = null;

    // Find the heading that is currently active (closest to top but passed)
    for (const heading of headings) {
      const rect = heading.getBoundingClientRect();
      if (rect.top < 150) {
        // Threshold from top
        currentHeading = heading;
      } else {
        break;
      }
    }

    // Default to first heading if none passed (e.g. at very top)
    if (!currentHeading && headings.length > 0) {
      // currentHeading = headings[0]; // Optional: highlight first item at top
    }

    // Reset all
    tocLinks.forEach((link) => {
      link.classList.remove(
        "border-l-accent",
        "text-accent",
        "font-medium",
        "bg-primary-light/10",
      );
      link.classList.add("border-transparent", "text-text-secondary");
    });

    if (currentHeading) {
      const link = document.querySelector(
        `nav li a[href="#${currentHeading.id}"]`,
      );
      if (link) {
        const li = link.parentElement;
        if (li) {
          li.classList.remove("border-transparent", "text-text-secondary");
          li.classList.add("border-l-accent", "text-accent", "font-medium");
        }
      }
    }
  }

  // Mobile ToC toggle helpers
  function openMobileToc(tocPanel: HTMLElement, btn: HTMLElement) {
    tocPanel.classList.remove("hidden", "static", "w-full");
    tocPanel.classList.add(
      "fixed",
      "left-4",
      "right-4",
      "bottom-24",
      "max-h-[60vh]",
      "shadow-2xl",
      "z-50",
      "rounded-2xl",
      "bg-bg-elevated",
      "border",
      "border-border-light",
    );
    btn.setAttribute("aria-expanded", "true");
    const icon = document.getElementById("toc-toggle-icon");
    if (icon) {
      icon.innerHTML =
        '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
    }
  }

  function closeMobileToc(tocPanel: HTMLElement, btn: HTMLElement) {
    tocPanel.classList.add("hidden", "static");
    tocPanel.classList.remove(
      "fixed",
      "left-4",
      "right-4",
      "bottom-24",
      "max-h-[60vh]",
      "shadow-2xl",
      "z-50",
      "rounded-2xl",
      "bg-bg-elevated",
      "border",
      "border-border-light",
    );
    tocPanel.classList.add("w-full");
    btn.setAttribute("aria-expanded", "false");
    const icon = document.getElementById("toc-toggle-icon");
    if (icon) {
      icon.innerHTML =
        '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
    }
  }

  // Run on scroll and initial load
  window.addEventListener("scroll", updateToc);
  document.addEventListener("DOMContentLoaded", () => {
    updateToc();

    const tocPanel = document.getElementById("toc-panel");
    const tocBtn = document.getElementById("toc-toggle-btn");

    if (tocPanel) {
      // Keep ToC visible by default on large screens; on small screens it is hidden and toggled via FAB
      tocPanel.classList.remove("hidden");

      // Re-run TOC highlight after clicking a link
      tocPanel.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          setTimeout(updateToc, 100);
          // If on mobile, close ToC after selecting
          if (window.matchMedia("(max-width: 1023px)").matches && tocBtn) {
            closeMobileToc(tocPanel, tocBtn);
          }
        });
      });

      // Initialize state: hide on small screens
      if (window.matchMedia("(max-width: 1023px)").matches) {
        tocPanel.classList.add("hidden");
      }
    }

    if (tocBtn && tocPanel) {
      tocBtn.addEventListener("click", () => {
        const isOpen = tocBtn.getAttribute("aria-expanded") === "true";
        if (isOpen) {
          closeMobileToc(tocPanel, tocBtn);
        } else {
          openMobileToc(tocPanel, tocBtn);
        }
      });

      // Close on escape
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") {
          closeMobileToc(tocPanel, tocBtn);
        }
      });

      // Close mobile panel if viewport becomes large
      const mq = window.matchMedia("(min-width: 1024px)");
      mq.addEventListener &&
        mq.addEventListener("change", (ev) => {
          if (ev.matches) {
            // ensure panel is visible and reset mobile classes on large screens
            tocPanel.classList.remove(
              "hidden",
              "fixed",
              "left-4",
              "right-4",
              "bottom-24",
              "max-h-[60vh]",
              "shadow-2xl",
              "z-50",
              "rounded-2xl",
              "bg-bg-elevated",
              "border",
              "border-border-light",
            );
            tocPanel.classList.add("w-full");
            tocBtn.setAttribute("aria-expanded", "false");
            const icon = document.getElementById("toc-toggle-icon");
            if (icon) {
              icon.innerHTML =
                '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
            }
          } else {
            // hide on small screens by default
            tocPanel.classList.add("hidden", "static");
            tocBtn.setAttribute("aria-expanded", "false");
          }
        });
    }
  });
</script>
